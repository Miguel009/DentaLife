<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    android:clickable="true">

    <TextView
        android:id="@+id/appointment_dent_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="100dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:text="@string/dent_name_hint"
        android:textColor="@color/purple_700"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/appointment_dent_specialty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appointment_dent_name"
        android:paddingLeft="100dp"
        android:paddingRight="10dp"
        android:text="@string/dent_specialty_hint"
        android:textColor="@color/purple_700" />

    <ImageView
        android:id="@+id/appointment_dent_img"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:scaleType="fitXY" />

</RelativeLayout>