<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp"
>

    <LinearLayout
        android:id="@+id/chat_left_msg"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:layout_gravity="start"
        >
        <TextView
            android:id="@+id/messa_name_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ptasans_bold"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:text="@string/dent_name_hint"
            android:textColor="@color/title_list"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/messa_message_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dent_specialty_hint"
            android:fontFamily="@font/ptasans_regular"
            android:textColor="@color/subtitle_list" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/chat_right_msg"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@color/purple_200"
        >
        <TextView
            android:id="@+id/messa_name_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ptasans_bold"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:text="@string/dent_name_hint"
            android:textColor="@color/title_list"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/messa_message_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/dent_specialty_hint"
            android:fontFamily="@font/ptasans_regular"
            android:textColor="@color/subtitle_list" />

    </LinearLayout>
</LinearLayout>