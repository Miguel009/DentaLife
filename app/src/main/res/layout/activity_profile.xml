<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".activities.LoginActivity">

    <TextView
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/profile_main_title"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="50dp"
        android:background="#30ffffff"
        android:drawableStart="@drawable/ic_person_pin"
        android:drawablePadding="20dp"
        android:hint="@string/profile_first_name"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />
    <EditText
        android:id="@+id/profile_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#30ffffff"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@+id/profile_name"
        android:hint="@string/profile_last_name"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:padding="20dp"
        android:drawableStart="@drawable/ic_baseline_vpn_key_24"
        android:drawablePadding="20dp"
        />

    <TextView
        android:id="@+id/profile_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_last_name"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:background="#30ffffff"
        android:drawablePadding="20dp"
        android:hint="@string/profile_email"
        android:inputType="none"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:drawableStartCompat="@drawable/ic_baseline_vpn_key_24" />
    <EditText
        android:id="@+id/profile_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#30ffffff"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@+id/profile_email"
        android:hint="@string/profile_phone"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:padding="20dp"
        android:drawableStart="@drawable/ic_baseline_vpn_key_24"
        android:drawablePadding="20dp"
        android:inputType="phone"
        />
    <EditText
        android:id="@+id/profile_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#30ffffff"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@+id/profile_phone"
        android:hint="@string/profile_address"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:padding="20dp"
        android:drawableStart="@drawable/ic_baseline_vpn_key_24"
        android:drawablePadding="20dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_address"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="@color/purple_700"
        android:text="@string/profile_button_text"
        android:textColor="@color/white"
        app:cornerRadius="5dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_update"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="@color/white"
        android:text="@string/cancel_button_text"
        android:textColor="@color/purple_700"
        app:cornerRadius="5dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/purple_700"
        />

    <ProgressBar
        android:id="@+id/profile_progress_bar"
        android:layout_width="90dp"
        android:layout_height="63dp"
        android:layout_below="@+id/profile"
        android:layout_marginTop="-15dp"
        android:visibility="visible" />
</RelativeLayout>