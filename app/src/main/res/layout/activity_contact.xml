<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ContactActivity">

    <TextView
        android:id="@+id/lbl_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="164dp"
        android:text="@string/contact_main_title"
        android:textColor="@color/black"
        android:fontFamily="@font/ptasans_bold"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/description_section_1"
        android:layout_width="362dp"
        android:layout_height="107dp"
        android:layout_marginTop="32dp"
        android:text="@string/contact_description"
        android:textColor="@color/inactive"
        android:textSize="18dp"
        android:fontFamily="@font/ptasans_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_section" />


    <Button
        android:id="@+id/button_close_option"
        android:layout_width="379dp"
        android:layout_height="44dp"
        android:layout_marginTop="324dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/button_principal"
        android:fontFamily="@font/ptasans_bold"
        android:letterSpacing="0"
        android:shadowRadius="5"
        android:text="Volver"
        android:textAllCaps="false"
        android:textColor="@color/violet_light"
        android:textSize="18dp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_section_1" />

    <View
        android:id="@+id/view_header"
        android:layout_width="413dp"
        android:layout_height="126dp"
        android:background="@drawable/gradient_violet_principal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_header_2"
        android:layout_width="69dp"
        android:layout_height="55.2dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/heart"
        app:layout_constraintBottom_toBottomOf="@+id/view_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/map_view_contact"
        android:layout_width="362dp"
        android:layout_height="280dp"
        app:layout_constraintBottom_toTopOf="@+id/button_close_option"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_section_1"
        app:layout_constraintVertical_bias="0.326" />

</androidx.constraintlayout.widget.ConstraintLayout>